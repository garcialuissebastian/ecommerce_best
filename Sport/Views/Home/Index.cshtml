    <div class="row">

        <div class="owl-carousel hidden-xs" style="height: 85px;">
            <div class="item">    <img src="/img/nike.png" alt="image" class="owlImg" />  </div>
            <div class="item"> <img src="/img/puma.png" alt="image" class="owlImg" onclick="window.location.href='/'" /> </div>
            <div class="item"> <img src="/img/reebok.png" alt="image" class="owlImg" /> </div>
            <div class="item"> <img src="/img/adidasoriginals.png" alt="image" class="owlImg" /> </div>

            <div class="item"> <img src="/img/marca_fila.png" alt="image" class="owlImg" /> </div>
